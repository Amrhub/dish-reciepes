<%= form_with model: [@recipe, @recipe_food], local: true do |form| %>
  <% if @recipe_food.errors.any? %>
  <div style="color: red">
    <ul class="alert alert-danger list-unstyled">
      <% @recipe_food.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="mb-3">
    <%= form.select(:food_id, options_from_collection_for_select(@foods, :id, :name), {prompt: 'Select a Food'} , {class: 'form-select', required: true}) %>
  </div>

  <div class="mb-3">
    <%= form.label :quantity, class: 'form-label'%>
    <%= form.number_field :quantity , class: 'form-control'%>
  </div>

  <div class="mb-3">
    <%= form.submit "Add Ingredient", class: 'btn btn-primary'%>
  </div>
<% end %>
