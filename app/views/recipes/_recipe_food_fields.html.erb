<div class="nested-fields row mb-3">
  <div class="field col">
    <%= f.select(:food_id, options_from_collection_for_select(@foods, :id, :name), {prompt: 'Select a Food'} , {class: 'form-select', required: true}) %>
  </div>

  <div class="field col">
    <%= f.number_field :quantity , class: 'form-control', placeholder: 'Quantity'%>
  </div>
  <%= link_to_remove_association "Remove", f, class: ' d-flex align-items-center btn btn-danger w-auto' %>
</div>