<h2 class="text-center mb-5">
  <%= @recipe.name %>
</h2>

<div class="d-flex justify-content-center row border-bottom border-bottom-3 border-dark pb-3 mb-3">
  <div class="col-6">
    <div class="mb-3">
      <strong>Preparation time:</strong>
      <%= @recipe.preparation_time.round(3) %>hr
    </div>

    <div class="mb-3">
      <strong>Cooking time:</strong>
      <%= @recipe.cooking_time.round(3) %>hr
    </div>

    <p>
      <%= @recipe.description %>
    </p>
  </div>

  <%= render "image", recipe: @recipe, class_type: 'img-fluid col-6' %>


  <div class="mt-3 d-flex">
    <%= link_to "Generate shopping list", recipe_shopping_list_path(@recipe), class: 'btn btn-primary' %>
    <% if can? :manage, @recipe %>
    <div class="btn-group ms-auto">
      <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: 'btn btn-primary' %>
      <%= link_to "Add ingredient", new_recipe_recipe_food_path(@recipe), class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/ingredient", recipe_foods: @recipe.recipe_foods, recipe: @recipe, render_actions: true %>