
<div class="d-flex align-items-center justify-content-center mb-5 gap-5">
  <h1>Recipies</h1>
  <%= link_to "Add recipe", new_recipe_path, class: 'btn btn-success' %>

</div>

<% if @recipes.empty? %>
  <span class="h3 text-center d-block mt-5 text-danger">No recipes to show</span>
<% else %>
  <div class="d-grid gap-5">
    <% @recipes.each_with_index do |recipe, index| %>
    <% if (index+1) % 4 == 0%>
        </div>
      <% end %>
      <% if (index+1) % 4 == 0 || index.zero? %>
      <div id="recipes" class="row">
      <% end %>
    
      <div class="col-4">
        <%= render recipe %>
      </div>
      <% if (index+1) % 4 == 0%>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

